{
  "productName": "Twitch Desktop",
  "directories": {
    "output": "release/"
  },
  "files": [
    "**/*",
    "!**/*.ts",
    "!*.code-workspace",
    "!LICENSE.md",
    "!package.json",
    "!package-lock.json",
    "!src/",
    "!e2e/",
    "!hooks/",
    "!angular.json",
    "!_config.yml",
    "!karma.conf.js",
    "!tsconfig.json",
    "!tslint.json"
  ],
  "win": {
    "icon": "build",
    "target": [
      {
        "target": "nsis-web",
        "arch": [
          "x64"
        ]
      },
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      },
      {
        "target": "portable",
        "arch": [
          "x64"
        ]
      }
    ],
    "publish": [
      "github"
    ]
  },
  "mac": {
    "icon": "build",
    "category": "public.app-category.entertainment",
    "target": [
      {
        "target": "dmg",
        "arch": [
          "x64"
        ]
      },
      {
        "target": "zip",
        "arch": [
          "x64"
        ]
      }
    ],
    "publish": [
      "github"
    ]
  },
  "linux": {
    "icon": "build/icon.icns",
    "category": "Video",
    "target": [
      {
        "target": "AppImage",
        "arch": [
          "x64"
        ]
      }
    ],
    "artifactName": "${productName}.${ext}",
    "publish": [
      "github"
    ]
  }
}